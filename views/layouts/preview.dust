<!DOCTYPE html>
<html>
<head>
	<style>body {
	background: blanchedalmond;
}
h1 {
	font-family: sans-serif;
	color: #63a;
}
</style>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
	<script src="/faye.js"></script>
	<script type="text/javascript">
		var client = new Faye.Client('/faye', {
			timeout: 120
		});

		client.subscribe('/{pageId}/css', function(message) {
			$("head style").html(message.css);
		});

		client.subscribe('/{pageId}/js', function(message) {
			//$("head style").html(message.css);
			//reload the page, load an external js file generated from the server
		});

		client.subscribe('/{pageId}/html', function(message) {
			$("body").html(message.html);
		});
	</script>
</head>
<body>{+content.html}<h1>Welcome to Zneak!</h1>
